<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"

        android:clickable="true"
        android:text="0"
        android:textSize="45sp"

        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/num0"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="8"
        android:textSize="45sp"

        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/num8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="5"
        android:textSize="45sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/num5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="2"
        android:textSize="45sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/num2"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/num2"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="1"
        android:textSize="45sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/num2"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/num2"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="3"
        android:textSize="45sp"

        />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/num5"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/num5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="4"
        android:textSize="45sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/num5"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/num5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="6"
        android:textSize="45sp"


        />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/num8"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/num8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="7"
        android:textSize="45sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/num9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/num8"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/num8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:text="9"
        android:textSize="45sp" />


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/complete_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/num0"
        android:layout_alignLeft="@id/num9"
        android:layout_alignRight="@id/num9"
        android:layout_alignTop="@id/num0"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@mipmap/check_symbol"
        android:textSize="45sp" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/pin_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:inputType="number"
        android:minWidth="80dp"
        android:textAlignment="center" />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pin_edit"
        android:layout_alignTop="@+id/pin_edit"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/pin_edit"
        android:src="@mipmap/ic_backspace_black_24dp" />


</RelativeLayout>